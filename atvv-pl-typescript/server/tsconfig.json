{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "out/",
    "moduleResolution": "node",
    "noImplicitAny": true
  },
  "include": ["src/**/*"]
}
